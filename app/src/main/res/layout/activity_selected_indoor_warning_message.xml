<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selected_classroom"
    android:background="#3B68B9">

    <TextView
        android:id="@+id/textView"
        android:layout_width="434dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/uci"
        android:fontFamily="@font/passion_one"
        android:gravity="center"
        android:text="ZotFinder 2.0"
        android:textColor="@color/white"
        android:textColorHint="#00FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="13dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Before we start, are you currently at the building of your target classroom?" />


    <Button
        android:id="@+id/yes_button"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="8dp"
        android:background="@color/navy2"
        android:fontFamily="@font/actor"
        android:textColor="@color/gold"
        android:text="Yes" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_below="@+id/yes_button"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="8dp"
        android:background="@color/navy2"
        android:fontFamily="@font/actor"
        android:textColor="@color/gold"
        android:text="No" />

    <Button
        android:id="@+id/unsure_button"
        android:layout_width="189dp"
        android:layout_height="58dp"
        android:layout_below="@+id/no_button"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="8dp"
        android:background="@color/navy2"
        android:fontFamily="@font/actor"
        android:textColor="@color/gold"
        android:text="Unsure" />


</RelativeLayout>